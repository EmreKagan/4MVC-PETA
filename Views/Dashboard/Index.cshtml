@{
    ViewData["isDashboard"] = true;
}

@*Summary Widgets*@
<div class="row mb-4">

    <div class="col-md-4">
        <div class="d-flex flex-row widget summary income">
            <div class="d-flex flex-column justify-content-center p-3">
                <i class="fa-solid fa-money-bill fa-xl"></i>
            </div>
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Toplam Gelir</span>
                <h1 class="display-6 fw-bold">@ViewBag.TotalIncome</h1>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="d-flex flex-row widget summary expense">
            <div class="d-flex flex-column justify-content-center p-3">
                <i class="fa-solid fa-money-bill fa-xl"></i>
            </div>
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Toplam Gider</span>
                <h1 class="display-6 fw-bold">@ViewBag.TotalExpense</h1>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="d-flex flex-row widget summary balance">
            <div class="d-flex flex-column justify-content-center p-3">
                <i class="fa-solid fa-money-bill fa-xl"></i>
            </div>
            <div class="d-flex  flex-column m-auto py-3">
                <span class="lead">Para Miktarı</span>
                <h1 class="display-6 fw-bold">@ViewBag.Balance</h1>
            </div>
        </div>
    </div>
</div>

<div class="col-md-4 grid-margin stretch-card" style="flex:1; float:left">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bugün</h4>
            <canvas id="transaction-history" class="transaction-chart"></canvas>
            <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                <div class="text-md-center text-xl-left">
                    <h6 class="mb-1">Gelir</h6>

                </div>
                <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                    <h6 class="font-weight-bold mb-0">₺236.00</h6>
                </div>
            </div>
            <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                <div class="text-md-center text-xl-left">
                    <h6 class="mb-1">Gider</h6>

                </div>
                <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                    <h6 class="font-weight-bold mb-0">₺593.00</h6>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-8" style="flex:3; float:left">
    <div class="widget chart">
        <div class="p-4">
            <h5 class="fw-bold">Gelir ve Gider</h5>
        </div>
        <ejs-chart id="spline-chart" background="#1a222b"
                   palettes=@(new string[]{"#54ffa9","#ffe91a"})>
            <e-chart-primaryxaxis valueType="Category">
                <e-majorgridlines width="0"></e-majorgridlines>
                <e-majorticklines width="0"></e-majorticklines>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis>
                <e-majorgridlines width="1" color="#32414d" dashArray="3,5"></e-majorgridlines>
                <e-majorticklines width="0"></e-majorticklines>
                <e-linestyle width="0"></e-linestyle>
            </e-chart-primaryyaxis>
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-series-collection>
                <e-series dataSource="@ViewBag.SplineChartData" xName="day" width="3"
                          yName="income" name="Gelir" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline"></e-series>
                <e-series dataSource="@ViewBag.SplineChartData" xName="day" width="3"
                          yName="expense" name="Gider" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline"></e-series>
            </e-series-collection>
            <e-chart-legendsettings position="Top" alignment="Far" toggleVisibility="false">
                <e-legendsettings-textstyle color="#fff" size="1rem"></e-legendsettings-textstyle>
            </e-chart-legendsettings>
            <e-chart-tooltipsettings enable shared></e-chart-tooltipsettings>
        </ejs-chart>
    </div>
</div>
